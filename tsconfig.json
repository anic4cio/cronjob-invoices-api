{
  "compilerOptions": {
    "target": "es2022",
    "lib": [ "ES2022" ],
    "module": "CommonJS",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./.eslintrc.cjs",
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "@tsconfig/node16/tsconfig.json"
}
